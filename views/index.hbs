<div class="container d-flex flex-column align-items-center">

  <h1 class ="mt-3">URL shortener</h1>

  <div class= "my-3">
    <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" 
         class= "d-block"
         style = "width:400px"
         alt="">
  </div>
  
  {{#if shortURL}}
  <div>
    <h2>Success! Please use this link:</h2>
    <a href={{shortURL}} target="blank" id = "copy" class = "d-block mb-2" style = "font-size:25px">{{shortURL}}</a>
    <button  type ="button" class= "btn btn-primary d-block mx-auto mt-3" onclick = "copyEvent('copy')" style= "width:30%; height:40px">Copy</button>
    <a  class= "btn btn-primary d-block mx-auto mt-3" style= "width:30%; height:40px" href="/">Back</a>
  </div>
  

  {{else}}

<form action="/" method="POST" style="width:40%;">
  <div class="form-group">
    <input type="url" class="form-control" name = "url" placeholder="Input URL Here"  required>
  </div>
  <button type="submit" class="d-block btn btn-outline-primary mx-auto" style="" >Submit</button>
</form>


  {{/if}}
</div>

